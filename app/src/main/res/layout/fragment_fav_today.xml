<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top"
    android:backgroundTint="@color/gigas"
    tools:context=".favorites.FavTodayFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/tvTodayTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Titulo"
            android:textColor="@color/white"
            android:textSize="18dp"
            android:fontFamily="@font/roboto"
            android:textStyle="bold"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/tvTodayDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dia"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_light"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTodayTitle"
            app:layout_constraintStart_toStartOf="parent" />

        <ImageView
            android:id="@+id/ivToday"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/tvTodayDate"
            app:layout_constraintBottom_toTopOf="@+id/llTodayFooter"
            app:layout_constraintStart_toStartOf="parent" />

        <LinearLayout
            android:id="@+id/llTodayFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:padding="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnWallpaper"
                android:layout_width="180dp"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/pill_shape"
                android:backgroundTint="@color/white"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:fontFamily="@font/roboto_light"
                android:textColor="@color/black"
                android:text="Usar como papel de parede"/>
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal"
                android:gravity="end">
                <ImageButton
                    android:id="@+id/starIcon"
                    android:layout_width="40dp"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_star_filled"
                    android:scaleType="fitCenter"
                    android:background="@null"
                    android:layout_gravity="center"
                    android:layout_marginRight="10dp"/>
                <ImageButton
                    android:id="@+id/shareIcon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_share"
                    android:tint="@color/black"
                    android:background="@drawable/pill_shape"
                    android:layout_gravity="center"/>
            </LinearLayout>


        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>