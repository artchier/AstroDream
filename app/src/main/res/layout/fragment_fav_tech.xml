<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top"
    android:backgroundTint="@color/gigas"
    tools:context=".favorites.FavTechFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llTechHeader"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:padding="20dp"
            android:orientation="horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/ivTech"
                android:layout_width="100dp"
                android:layout_height="match_parent"
                android:contentDescription="@string/imagem_tecnologia" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="20dp">
                <TextView
                    android:id="@+id/tvTechType"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tipo tec"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto"
                    android:textStyle="bold"
                    tools:ignore="HardcodedText" />
                <TextView
                    android:id="@+id/tvTechTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Titulo"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto_light"
                    android:layout_marginTop="5dp"
                    tools:ignore="HardcodedText" />
            </LinearLayout>

        </LinearLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/llTechHeader"
            app:layout_constraintBottom_toTopOf="@+id/llTechFooter"
            app:layout_constraintStart_toStartOf="parent">
            <TextView
                android:id="@+id/tvTechDetails"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Texto"
                android:fontFamily="@font/roboto_light"
                android:textSize="16sp"
                android:textColor="@color/white"
                android:padding="20dp"
                tools:ignore="HardcodedText" />
        </ScrollView>

        <LinearLayout
            android:id="@+id/llTechFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/starIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_filled"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/favoritar" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>