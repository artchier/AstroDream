<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.astrodream">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.SET_WALLPAPER"/>
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_astrodream"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_astrodream_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.AstroDream">
        <activity android:name=".ui.plaindailymars.PlainActivity" />
        <activity android:name=".ui.dailyimage.DailyImageActivity" />
        <activity android:name=".ui.avatar.AvatarActivity" />
        <activity android:name=".ui.FullScreenImgActivity" />
        <activity android:name=".ui.globe.GlobeActivity" />
        <activity android:name=".ui.login.LoginActivity" />
        <activity android:name=".ui.favorites.FavoritesActivity" />
        <activity android:name=".ui.asteroids.AsteroidActivity" android:windowSoftInputMode="stateHidden|adjustResize|adjustPan"/>
        <activity android:name=".ui.SplashScreenActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.initial.InitialActivity" />
        <activity android:name=".ui.userconfig.UserConfigActivity" />
        <activity android:name=".ui.tech.TechActivity" />
        <activity android:name=".ui.mars.MarsActivity" />

        <service android:name=".services.SetWallpaperJob"
            android:permission="android.permission.BIND_JOB_SERVICE"
            android:exported="true" >
        </service>
    </application>

</manifest>