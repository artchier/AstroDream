<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsteroidOrbitFragment"
    android:background="@color/bunting">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAsteroidHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">
            <ImageView
                android:id="@+id/asteroidIcon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_asteroide"/>
            <TextView
                android:id="@+id/tvAsteroidName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nome"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/roboto_light"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/llAsteroidHeader"
            app:layout_constraintBottom_toTopOf="@+id/llAsteroidData"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/ivAsteroid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llAsteroidData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:background="@drawable/pill_shape"
            android:backgroundTint="@color/lucky_point"
            android:padding="20dp"
            android:layout_margin="10dp">
            <TextView
                android:id="@+id/tvAsteroidClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data" />
            <TextView
                android:id="@+id/tvAsteroidProxSun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidProxEarth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidDistEarth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidMag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>