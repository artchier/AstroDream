<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AsteroidOrbitFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAsteroidHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginVertical="20dp"
            android:layout_marginHorizontal="10dp"
            android:weightSum="1">
            <Space
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.1"/>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="0.8"
                android:orientation="horizontal"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/asteroidIcon"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/ic_asteroide"/>
                <TextView
                    android:id="@+id/tvAsteroidName"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="20dp"
                    android:text="Nome"
                    android:textColor="@color/white"
                    android:textSize="20dp"
                    android:fontFamily="@font/roboto_light"
                    android:gravity="center_vertical"/>
            </LinearLayout>
            <ImageButton
                android:id="@+id/starIcon"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="0.1"
                android:src="@drawable/ic_star_filled"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_gravity="center"
                android:contentDescription="@string/favoritar" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/llAsteroidHeader"
            app:layout_constraintBottom_toTopOf="@+id/llAsteroidData"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">
            <ImageView
                android:id="@+id/ivAsteroid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"/>
        </androidx.cardview.widget.CardView>

        <LinearLayout
            android:id="@+id/llAsteroidData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="vertical"
            android:background="@drawable/pill_shape"
            android:backgroundTint="@color/lucky_point"
            android:padding="20dp"
            android:layout_marginHorizontal="10dp"
            android:layout_marginBottom="30dp">
            <TextView
                android:id="@+id/tvAsteroidClass"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data" />
            <TextView
                android:id="@+id/tvAsteroidProxSun"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidProxEarth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidDistEarth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidMag"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
            <TextView
                android:id="@+id/tvAsteroidSpeed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/textAsteroid"
                android:text="Data"/>
        </LinearLayout>




    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>