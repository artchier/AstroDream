<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top"
    android:backgroundTint="@color/gigas"
    tools:context=".favorites.FavAsteroidsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAsteroidHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp">
            <ImageView
                android:id="@+id/asteroidIcon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_asteroide"/>
            <TextView
                android:id="@+id/tvAsteroidName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nome"
                android:textColor="@color/white"
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_marginLeft="15dp"
                android:gravity="center_vertical"/>
        </LinearLayout>

        <ImageView
            android:id="@+id/ivAsteroid"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            app:layout_constraintTop_toBottomOf="@+id/llAsteroidHeader"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="20dp"/>

        <TextView
            android:id="@+id/tvAsteroidData"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Data"
            android:textColor="@color/white"
            android:textSize="16dp"
            android:fontFamily="@font/roboto_light"
            android:layout_margin="10dp"
            android:padding="20dp"
            app:layout_constraintTop_toBottomOf="@+id/ivAsteroid"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/pill_shape"
            android:backgroundTint="@color/lucky_point"/>


        <LinearLayout
            android:id="@+id/llTodayFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/starIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_filled"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginRight="10dp"/>
            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>