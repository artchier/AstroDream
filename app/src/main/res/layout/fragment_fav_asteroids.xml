<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_top"
    android:backgroundTint="@color/gigas"
    tools:context=".favorites.FavAsteroidsFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/llAsteroidHeader"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp">

            <ImageView
                android:id="@+id/asteroidIcon"
                android:layout_width="50dp"
                android:layout_height="match_parent"
                android:src="@drawable/ic_asteroide"
                android:contentDescription="@string/icone_asteroide" />

            <TextView
                android:id="@+id/tvAsteroidName"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:text="Nome"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:fontFamily="@font/roboto"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:gravity="center_vertical"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@+id/llAsteroidHeader"
            app:layout_constraintBottom_toTopOf="@+id/tvAsteroidData"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_margin="10dp"
            app:cardCornerRadius="20dp">

            <ImageView
                android:id="@+id/ivAsteroid"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:contentDescription="@string/foto_do_asteroide" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/tvAsteroidData"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:text="Data"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:fontFamily="@font/roboto_light"
            android:padding="20dp"
            android:layout_margin="10dp"
            app:layout_constraintBottom_toTopOf="@+id/llTodayFooter"
            app:layout_constraintStart_toStartOf="parent"
            android:background="@drawable/pill_shape"
            android:backgroundTint="@color/lucky_point"
            android:gravity="center_vertical"
            tools:ignore="HardcodedText" />


        <LinearLayout
            android:id="@+id/llTodayFooter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:orientation="horizontal"
            android:padding="20dp"
            android:gravity="end">

            <ImageButton
                android:id="@+id/starIcon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_star_filled"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_gravity="center"
                android:layout_marginEnd="10dp"
                android:contentDescription="@string/favoritar" />

            </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>